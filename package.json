{
  "name": "@tiagoporto/config",
  "version": "0.0.0-development",
  "private": true,
  "type": "module",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": ">=24",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "version": ">=11",
      "onFail": "error"
    }
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "dependabot-config && editor-config",
    "check-update": "npx npm-check --update && npm run check-update --workspaces --if-present",
    "checks": "npm run check-docs && npm run format:check && npm run lint",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check -- --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "npm run lint -- --write"
  },
  "devDependencies": {
    "@anolilab/multi-semantic-release": "^2.0.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tiagoporto/dependabot-config": "^1.0.0",
    "@tiagoporto/editor-config": "^1.0.0",
    "@tiagoporto/eslint-config": "^1.0.0",
    "@tiagoporto/prettier-config": "^1.0.0",
    "@types/react": "^19.2.2",
    "eslint": "^9.39.0",
    "lefthook": "^2.0.2",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "semantic-release": "^25.0.1"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">=9.0.0"
  }
}
