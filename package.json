{
  "name": "@tiagoporto/config",
  "version": "0.0.0-development",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.6.0+sha512.77f3fb0dbbd881835d7bd1217deabdf7ed77fc4ec4f363df64fc3cb986404abf6c437661041080f5c5d225103508e7c9ea30cb2742b7e942675d05a10af2d7b9",
  "scripts": {
    "postinstall": "dependabot-config && editor-config",
    "checks": "npm run check-docs && npm run format:check && npm run lint",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "npm run format:check -- --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "npm run lint -- --write"
  },
  "devDependencies": {
    "@anolilab/multi-semantic-release": "^2.0.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tiagoporto/dependabot-config": "^1.0.0",
    "@tiagoporto/editor-config": "^1.0.0",
    "@tiagoporto/eslint-config": "^1.0.0",
    "@tiagoporto/prettier-config": "^1.0.0",
    "@types/react": "^19.2.2",
    "eslint": "^9.38.0",
    "lefthook": "^2.0.1",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "semantic-release": "^24.2.9"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">=9.0.0"
  }
}
